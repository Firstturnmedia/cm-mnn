/**
 * @todo Please document this function.
 * @see http://drupal.org/node/1354
 */
function internet_archive_log_table($type = 'tid', $identifier = NULL, $show_notices = FALSE) {
  switch ($type) {
    case 'tid':
      $where = ' WHERE log.tid=%d';
      break;
    case 'nid':
      $where = ' WHERE archive.nid=%d';
      break;
    case 'global':
      if (!$show_notices) {
        $where = " WHERE log.type='" . ARCHIVE_LOG_WARNING . "' OR log.type='" . ARCHIVE_LOG_ERROR . "'";
      }
      break;
  }

  $query = "SELECT log.lid,log.tid,log.message,log.message_data,log.type,log.date FROM {internet_archive_log} AS log JOIN {internet_archive} AS archive ON archive.tid=log.tid" . $where . " ORDER BY log.date DESC";

  $result = pager_query($query, $limit = 10, $element = 0, $count_query = NULL, $identifier);
  while ($log_entry = db_fetch_array($result)) {
    switch ($log_entry['type']) {
      case 1:
        $friendly_type = 'error';
        break;
      case 2:
        $friendly_type = 'warning';
        break;
      case 3:
        $friendly_type = 'notice';
        break;
    }

    $message = $log_entry['message'];
    $message .= '&nbsp;on <em>' . date("F j, Y, g:i a", $log_entry['date']) . '</em>';

    if (function_exists('krumo') && php_sapi_name() != 'cli') {
      $message .= '<br />';
      $message .= krumo_ob(unserialize($log_entry['message_data']));
    }

    $rows[] = array(
      'data' => array($message, array(
          'data' => $friendly_type,
          'class' => 'ia-type',
        )),
      'class' => 'ia-' . $friendly_type,
    );
  }

  if (count($rows) > 0) {
    $header = array('Message', 'Type');
    $table = theme('table', array('header' => $header, 'rows' => $rows, 'attributes' => array('class' => 'ia-transfer-log')));
    // TODO Please change this theme call to use an associative array for the $variables parameter.
    $table .= theme('pager');
    if (!function_exists('krumo') || php_sapi_name() == 'cli') {
      $table .= t('For more detailed debugging, please install the devel module and return to this page.');
    }
    return $table;
  }
  else {
    return t('No log information is currently available for this file.');
  }
}

