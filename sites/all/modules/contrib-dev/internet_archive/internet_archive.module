/**
 * Adds archive.org file status and manual transfer links
 * beneath relevant field displays
 *
 * @param $node
 *   A node object.
 */
function internet_archive_alter_field_display(&$node) {

  //grab all applicable fields
  $fields = internet_archive_fields();

  foreach ($fields as $field_name => $field_info) {
    //get the value key to reference
    switch ($field_info['type']) {
      case 'filefield':
        $value_key = 'filepath';
        break;
      case 'text':
      case 'emvideo':
        $value_key = 'value';
        break;
    }

    if ($node->$field_name) {
      if ($node->{$field_name}[0][$value_key]) {
        $output = internet_archive_theme_field_display($node->$field_name, $value_key);
      }
      if ($output) {
        $node->content[$field_name]['archive_info'] = array(
          '#value' => $output,
          '#weight' => 10,
        );
      }
    }
  }
}

